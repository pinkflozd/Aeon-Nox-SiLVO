<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation type="WindowOpen" reversible="false">
		<effect type="slide" start="0,-60" tween="cubic" easing="inout" time="720" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="slide" end="0,-60" tween="cubic" easing="inout" time="720" />
	</animation>
	<controls>
		<control type="group">
			<visible>String.IsEmpty(Window(Home).Property(script.cinemavision.running))</visible>
			<width>100%</width>
			<control type="image">
				<width>100%</width>
				<height>50</height>
				<align>center</align>
				<texture>black.png</texture>
			</control>
			<control type="image" id="400">
				<top>2.5</top>
				<width>45</width>
				<height>45</height>
				<bordertexture border="1,1,2,1">thumbs/panel_border3.png</bordertexture>
				<bordersize>1,1,2,1</bordersize>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="fadelabel" id="401">
				<description>Line 1 Label</description>
				<left>40</left>
				<width>655</width>
				<height>50</height>
				<font>font15_title</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>$VAR[ThemeLabelColor]</textcolor>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
			</control>
			<control type="fadelabel" id="402">
				<description>Line 2 Label</description>
				<left>700</left>
				<width>1215</width>
				<height>50</height>
				<font>font15</font>
				<align>right</align>
				<textoffsetx>15</textoffsetx>
				<textcolor>grey2</textcolor>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
			</control>
		</control>
	</controls>
</window>