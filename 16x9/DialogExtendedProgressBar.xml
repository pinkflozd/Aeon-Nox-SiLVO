<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation type="WindowOpen" reversible="false">
		<effect type="slide" start="0,-60" tween="cubic" easing="inout" time="720" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="slide" end="0,-60" tween="cubic" easing="inout" time="720" />
	</animation>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(fullscreenvideo) + !Window.IsActive(visualisation) + !Window.IsActive(startup)</visible>
			<width>100%</width>
			<control type="image">
				<width>100%</width>
				<height>50</height>
				<align>center</align>
				<texture>black.png</texture>
			</control>
			<control type="progress" id="32">
				<width>100%</width>
				<height>50</height>
				<lefttexture />
				<righttexture />
				<overlaytexture />
				<texturebg>osd/texturebg2.png</texturebg>
				<midtexture colordiffuse="$VAR[ThemeLabelColor]" border="2">osd/midtexture.png</midtexture>
				<colordiffuse>44FFFFFF</colordiffuse>
			</control>
			<control type="label">
				<width>655</width>
				<height>50</height>
				<textcolor>grey</textcolor>
				<textoffsetx>15</textoffsetx>
				<label>$INFO[Control.GetLabel(30)]$INFO[Control.GetLabel(32),: ,%]</label>
			</control>
			<control type="label" id="31">
				<left>700</left>
				<width>1215</width>
				<height>50</height>
				<align>right</align>
				<textoffsetx>15</textoffsetx>
			</control>
			<control type="label" id="30">
				<description>Header Label</description>
				<include>HiddenObject</include>
			</control>
		</control>
	</controls>
</window>